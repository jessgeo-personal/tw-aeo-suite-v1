# ============================================
# PRODUCTION .ENV TEMPLATE FOR AEO SUITE
# ============================================
# INSTRUCTIONS:
# 1. Copy this file to .env for local development
# 2. Replace all placeholder values with your actual keys
# 3. NEVER commit the .env file to GitHub
# 4. For production, add these variables in DigitalOcean Dashboard

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://aeo.thatworkx.com

# ============================================
# MONGODB DATABASE
# ============================================
# Get from: MongoDB Atlas → Connect → Connect your application
MONGODB_URI=mongodb+srv://USERNAME:PASSWORD@cluster.mongodb.net/DATABASE_NAME?retryWrites=true&w=majority&appName=CLUSTER_NAME&tls=true&tlsAllowInvalidCertificates=true

# ============================================
# SESSION MANAGEMENT
# ============================================
# Generate with: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=REPLACE_WITH_STRONG_RANDOM_STRING_32_CHARS_MIN

# ============================================
# EMAIL SERVICE (RESEND)
# ============================================
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_XXXXXXXXXXXXXXXXXXXXXXXX
FROM_EMAIL=noreply@thatworkx.com
FROM_NAME=AEO Audit Suite
ENABLE_EMAIL_VERIFICATION=true

# ============================================
# HUBSPOT CRM INTEGRATION
# ============================================
# Get token from: HubSpot → Settings → Integrations → Private Apps
HUBSPOT_ACCESS_TOKEN=pat-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
ENABLE_HUBSPOT_INTEGRATION=true

# ============================================
# USAGE LIMITS CONFIGURATION
# ============================================
ENABLE_USAGE_LIMITS=true
DAILY_LIMIT_TECHNICAL=3
DAILY_LIMIT_CONTENT=3
DAILY_LIMIT_QUERY_MATCH=3
DAILY_LIMIT_VISIBILITY=3

# ============================================
# STRIPE PAYMENT PROCESSING (DISABLED FOR BETA)
# ============================================
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_PRICE_MONTHLY=your_stripe_price_id_monthly
STRIPE_PRICE_SEMI_ANNUAL=your_stripe_price_id_semi_annual
STRIPE_PRICE_ANNUAL=your_stripe_price_id_annual

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# OPTIONAL: LOGGING
# ============================================
LOG_LEVEL=inf

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Email Configuration
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=AEO Audit Suite

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_HUBSPOT_INTEGRATION=true
ENABLE_USAGE_LIMITS=true
